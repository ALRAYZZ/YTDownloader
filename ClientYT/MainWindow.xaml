<Window x:Class="ClientYT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientYT"
        mc:Ignorable="d"
        Title="YouTube Downloader" Height="500" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Enter YouTube URL:" Grid.Row="0" Margin="10"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="txtUrl" Width="300" Text="Enter YouTube URL" GotFocus="TxtUrl_GotFocus"/>
            <Button x:Name="btnClear" Content="Clear" Width="80" Margin="5,0,0,0" Click="btnClear_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
            <Label Content="Select Format:"/>
            <ComboBox x:Name="cmbFormat" Width="100" Margin="5,0">
                <ComboBoxItem Content="MP4" IsSelected="True"/>
                <ComboBoxItem Content="MP3"/>
            </ComboBox>
            <Button x:Name="btnAddToQueue" Content="Add to Queue" Width="100" Margin="5,0,0,0" Click="btnAddToQueue_Click"/>
            <Button x:Name="btnDownload" Content="Download Queue" Width="100" Margin="5,0,0,0" Click="btnDownload_Click"/>
        </StackPanel>
        <ListBox x:Name="lstQueue" Grid.Row="3" Margin="10" Width="400" Height="100" HorizontalAlignment="Left"/>
        <ProgressBar x:Name="progressBar" Grid.Row="4" Height="20" Width="300" Margin="10" Minimum="0" Maximum="100" Visibility="Hidden" HorizontalAlignment="Center"/>
        <Label x:Name="lblStatus" Content="Ready" Grid.Row="5" Margin="10" HorizontalAlignment="Center"/>
    </Grid>
</Window>
